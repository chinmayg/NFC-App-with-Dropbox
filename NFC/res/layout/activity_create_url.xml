<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateURLActivity" >

    <TextView
        android:id="@+id/fileOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:paddingBottom="20dp"
        android:text="Choose a File to Share"
        android:textColor="#2f6699"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button_openFile"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fileOut"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@drawable/gradient"
        android:text="OpenFile" />

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_openFile"
        android:text="Your Share URL:"
        android:textColor="#2f6699"
        android:textSize="25dp" />

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/textView_output"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:gravity="left"
        android:textSize="20dp"
        android:text="" />

</RelativeLayout>